<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginVertical="4dp"
    android:layout_marginHorizontal="10dp"
    android:background="@drawable/border_and_white"
    android:elevation="3dp">

    <TextView
        android:id="@+id/ranking_calorie_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:text="칼로리"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@id/ranking_carbohydrate_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ranking_calorie_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:text="칼로리 수치"
        android:textSize="15sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ranking_calorie_title"/>

    <TextView
        android:id="@+id/ranking_carbohydrate_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="탄수화물"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/ranking_calorie_title"
        app:layout_constraintTop_toBottomOf="@id/ranking_calorie_title"/>

    <TextView
        android:id="@+id/ranking_carbohydrate_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="탄수화물 수치"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/ranking_calorie_content"
        app:layout_constraintTop_toBottomOf="@id/ranking_calorie_content"/>

    <TextView
        android:id="@+id/ranking_protein_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="단백질"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/ranking_carbohydrate_title"
        app:layout_constraintLeft_toLeftOf="@id/ranking_carbohydrate_title"/>

    <TextView
        android:id="@+id/ranking_protein_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="단백질 수치"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/ranking_carbohydrate_content"
        app:layout_constraintTop_toBottomOf="@id/ranking_carbohydrate_content"/>

    <TextView
        android:id="@+id/ranking_fat_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:text="지방"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/ranking_protein_title"
        app:layout_constraintLeft_toLeftOf="@id/ranking_protein_title"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/ranking_fat_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:text="지방 수치"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/ranking_protein_content"
        app:layout_constraintTop_toBottomOf="@id/ranking_protein_content"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>